extends  ../base

block content 
    if errorMessage 
        span=errorMessage
    include ../partials/form-header
    form(method="post").login-form
        input(type="text", placeholder="ID", name="loginId", required)
        input(type="password", placeholder="Password", name="password", required)
        input(type="submit", value="Login")
        br
        include ../partials/social-login
    div.loginToJoin
        span Don't have an account? 
        a(href="/join") Create one now! &rarr;